<MarkerPage>:
	BoxLayout:
		id: vertical_layout
		orientation: 'vertical'
		BoxLayout:
			size_hint: 1, 0.2
			orientation: 'horizontal'	
			Button:
				text: "<<"
				on_press: root.draw_drawing_board()
				size_hint: 0.15, 1
			Button:
				text: "<<"
				size_hint: 0.15, 1
			Slider:
				id: slider
				min:0
				max: 100
				step: 1
				orientation: 'horizontal'
			Button:
				text: ">"
				size_hint_x: 0.15
			Button:
				text: ">>"
				size_hint_x: 0.15
		FloatLayout:
			size_hint: 1, 0.3
			id: drawing_board
			canvas:	
		Button:
			size_hint: 1,0.25
			text: "PlaceHolder"
		Button:
			size_hint: 1,0.25
			text: "Placeholder"
